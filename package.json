{
  "name": "echofootprint",
  "version": "1.0.0",
  "description": "Privacy-first browser extension that visualizes Facebook tracking across the web",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/build-helper.js",
    "preview": "vite preview",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "vitest",
    "zip": "npm run build && cd dist && zip -r ../echofootprint.zip ."
  },
  "keywords": [
    "privacy",
    "facebook",
    "tracking",
    "visualization",
    "browser-extension"
  ],
  "author": "EchoFootPrint",
  "license": "MIT",
  "dependencies": {
    "d3": "^7.9.0",
    "dexie": "^3.2.7",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.1.1",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
